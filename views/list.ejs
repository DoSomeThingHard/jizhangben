<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="/js/list.js"></script>
    <style>
        .container{
            width: 800px;
            margin: 0 auto;
        }
        .panel{
            margin: 10px 0;
            position: relative;
        }
        .panel:nth-child(n){
            background-color: #f5f5f5;
        }
        .panel:nth-child(2n){
            background-color: orange;
        }
        .label-warning{
            background-color: red;
        }
        .label-success{
            background-color: green;
        }
        .deleteBtn{
            position: absolute;
            right: 20px;
            top: 20px;
            display: none;
            cursor: pointer;
        }
        .panel:hover .deleteBtn{
            display: block;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div>
                <h2>记账本</h2>
                <a href="/account/create">添加账单</a>
                <a href="/logout">退出登录</a>
            </div>
            <hr>
            <div class="accounts">
                <% accounts.forEach(item => { %>
                    <div class="panel panel-danger">
                        <div class="panel-heading"><%= moment(item.time).format("yyyy-MM-DD") %></div>
                        <div class="panel-body">
                            <div><%= item.title %></div>
                            <div>
                                <span class="<%= item.type == '-1'?'label-warning':'label-success' %>"><%= item.type == "-1"?"支出":"收入" %></span>
                            </div>
                            <div><%= item.account %>元</div>
                            <div>
                                <a class="deleteBtn" data-title=<%= item.title %> href="/account/<%= item._id %>">
                                <!-- <a href="/account/<%= item.id %>"> -->
                                    <span>x</span>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>